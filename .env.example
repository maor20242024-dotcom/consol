# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Database Configuration
# Use Direct Connection string for migrations (npx prisma db push)
# Use Pooler Connection for runtime (add ?pgbouncer=true)
DATABASE_URL=postgresql://user:password@host:5432/database?schema=public

# AI Services (Optional)
OPENROUTER_API_KEY=your_openrouter_api_key
GEMINI_API_KEY=your_gemini_api_key

# Meta/Facebook Configuration (Optional)
META_APP_ID=your_meta_app_id
META_APP_SECRET=your_meta_app_secret
NEXT_PUBLIC_META_REDIRECT_URI=https://your-domain.com/api/integrations/instagram/callback
META_USER_ACCESS_TOKEN=your_meta_user_access_token
META_WEBHOOK_VERIFY_TOKEN=imperiumgate_meta_verify_2024

# Encryption (Required for secure data storage)
ENCRYPTION_KEY=your_32_character_encryption_key

# Node Environment
NODE_ENV=development
